<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
   http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
   version="2.1">

	<managed-bean>
		<managed-bean-name>livroService</managed-bean-name>
		<managed-bean-class>service.LivroService</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>livroDao</property-name>
			<property-class>data.dao.LivroDao</property-class>
			<value>#{livroDao}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>livroDao</managed-bean-name>
		<managed-bean-class>data.dao.LivroDao</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>listar_livros</from-outcome>
			<to-view-id>/page/lista_livro.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>area_restrita</from-outcome>
			<to-view-id>/pages/area_restrita/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>